<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pic_almacen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scrollbarStyle="outsideOverlay"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="0sp"
        android:layout_marginRight="0sp"
        android:background="@drawable/almacen">

        <LinearLayout

            android:id="@+id/container_toolbar2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="150dp"
            android:layout_marginLeft="60sp"


            android:layout_marginRight="60sp"
            android:layout_marginTop="180dp"
            android:background="@android:drawable/screen_background_dark_transparent"
            android:elevation="20dp"
            android:orientation="vertical"
            android:visibility="visible"
            android:weightSum="1">

            <EditText
                android:id="@+id/edt_user"
                android:layout_width="wrap_content"
                android:layout_height="39dp"
                android:layout_above="@+id/edt_passw"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="20dp"
                android:layout_weight="0.11"
                android:background="@color/blanco"
                android:backgroundTint="@color/blanco"
                android:ems="15"
                android:hint="Usuario"
                android:inputType="textPersonName"
                android:visibility="visible" />

            <EditText
                android:id="@+id/edt_passw"
                android:layout_width="match_parent"
                android:layout_height="39dp"


                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="86dp"
                android:background="@color/blanco"
                android:backgroundTint="@color/blanco"
                android:elevation="@dimen/fab_icon_size"
                android:ems="15"
                android:hint="Contraseña"
                android:inputType="textPassword"
                android:visibility="visible" />


            <Button
                android:id="@+id/bt_buscarDa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/progressBar"
                android:layout_marginBottom="35dp"
                android:background="#fcbf15"
                android:elevation="1dp"
                android:paddingLeft="35sp"
                android:paddingRight="35sp"
                android:text="INICIA SESIÓN"
                android:textColor="@color/negro"
                android:textSize="17sp"
                android:textStyle="bold"
                android:visibility="visible" />


        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="17dp"
            android:layout_weight="0.1"
            android:visibility="invisible" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/container_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="-55sp"
            android:text="Logistica"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffffff"
            android:textSize="25sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>
