<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f1f1f1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#ffffff"
        android:weightSum="1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="418sp"
        android:orientation="vertical"
        android:background="#ffffff"
        android:weightSum="1"
        android:layout_weight="0.57">
        <LinearLayout
            android:id="@+id/container_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#ffffff">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="5sp"
                android:paddingTop="5sp"
                android:paddingLeft="10sp"
                android:paddingRight="10sp">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="fill_horizontal">
                    <TextView
                        android:id="@+id/Txtcodigoproducto"
                        android:text="Codigo del poducto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="24sp"
                        android:textColor="#2195f2"
                        android:typeface="sans" />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none|textPersonName"
                        android:text="Codigo"
                        android:ems="10"
                        android:id="@+id/editcodigo" />
                </LinearLayout>
            </LinearLayout>
            </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0sp"
            android:layout_marginRight="0sp"
            android:layout_marginTop="5sp"
            android:paddingTop="5sp"
            android:paddingLeft="10sp"
            android:paddingRight="10sp">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="fill_horizontal">
                <TextView
                    android:id="@+id/TxtLinia"
                    android:text="Linia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    android:textColor="#2195f2"
                    android:typeface="sans" />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none|textPersonName"
                    android:text="Linia"
                    android:ems="10"
                    android:id="@+id/editlinia" />
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10sp"
            android:paddingRight="10sp"
            android:paddingBottom="5sp"
            android:layout_marginTop="-5sp"
            android:layout_weight="0.08">
            <TextView
                android:id="@+id/Txtcantidad"
                android:text="Cantidad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textColor="#2195f2"
                android:typeface="sans" />
            <EditText
                android:layout_width="120sp"
                android:layout_height="wrap_content"
                android:inputType="none|textPersonName"
                android:text="cantidad"
                android:ems="10"
                android:id="@+id/editcantida"
                android:layout_below="@+id/Txtcantidad"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <Button
                android:layout_width="40sp"
                android:layout_height="20sp"
                android:text="-"
                android:textSize="24sp"
                android:id="@+id/bt_menos"
                android:background="#2196F3"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:layout_alignTop="@+id/editcantida"
                android:layout_toRightOf="@+id/editcantida"
                android:layout_alignBottom="@+id/editcantida" />
            <Button
                android:layout_width="40sp"
                android:layout_height="20sp"
                android:text="+"
                android:textSize="24sp"
                android:id="@+id/bt_mas"
                android:background="#2196F3"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:layout_toRightOf="@+id/bt_menos"
                android:layout_toEndOf="@+id/bt_menos"
                android:layout_marginLeft="22sp"
                android:layout_marginStart="22sp"
                android:layout_alignBottom="@+id/bt_menos"
                android:layout_alignTop="@+id/bt_menos" />
            <Button
                android:layout_width="40sp"
                android:layout_height="20sp"
                android:text="#"
                android:textSize="24sp"
                android:id="@+id/bt_num"
                android:background="#2196F3"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:layout_toRightOf="@+id/bt_mas"
                android:layout_toEndOf="@+id/bt_mas"
                android:layout_marginLeft="22sp"
                android:layout_marginStart="22sp"
                android:layout_alignBottom="@+id/bt_mas"
                android:layout_alignTop="@+id/bt_mas" />
            <Button
                android:layout_width="40sp"
                android:layout_height="20sp"
                android:text="0"
                android:textSize="24sp"
                android:id="@+id/bt_0"
                android:background="#2196F3"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:layout_toRightOf="@+id/bt_num"
                android:layout_toEndOf="@+id/bt_num"
                android:layout_marginLeft="22sp"
                android:layout_marginStart="22sp"
                android:layout_alignBottom="@+id/bt_num"
                android:layout_alignTop="@+id/bt_num" />
        </RelativeLayout>
    </LinearLayout>
    </LinearLayout>
</android.support.v4.widget.DrawerLayout>