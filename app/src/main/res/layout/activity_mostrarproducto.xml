<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:theme="@style/AppTheme.NoActionBar"
    android:background="#f1f1f1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#ffffff"
        android:weightSum="1">
        <LinearLayout
            android:id="@+id/containe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <include
                android:id="@+id/toolbar3"
                layout="@layout/toolbar"
                android:layout_height="80sp"
                android:layout_width="fill_parent" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/textView"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="-55sp"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="#ffffff"/>
        </LinearLayout>
        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
        <RelativeLayout
            android:id="@+id/scrollView"
            android:layout_width="fill_parent"
            android:layout_height="670sp"
            android:padding="16sp"
            android:scrollbars="vertical">
            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                card_view:cardBackgroundColor="@android:color/white"
                card_view:cardCornerRadius="4sp"
                card_view:cardElevation="4sp"
                card_view:cardUseCompatPadding="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true">
                    <LinearLayout
                        android:id="@+id/linearLayoutCardContent"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:weightSum="1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="673sp"
                            android:background="#ffffff"
                            android:orientation="vertical"
                            android:weightSum="1">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="0sp"
                                android:layout_marginRight="0sp"
                                android:layout_marginTop="5sp"
                                android:orientation="horizontal"
                                android:paddingLeft="10sp"
                                android:paddingRight="10sp"
                                android:paddingTop="5sp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="fill_horizontal"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/txtUbicacionO"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Ubicacion origen:"
                                        android:textColor="#000000"
                                        android:textSize="20sp"
                                        android:typeface="sans" />

                                </LinearLayout>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="0sp"
                                android:layout_marginRight="0sp"
                                android:layout_marginTop="5sp"
                                android:orientation="horizontal"
                                android:paddingLeft="10sp"
                                android:paddingRight="10sp"
                                android:paddingTop="5sp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center_horizontal"
                                    android:orientation="vertical">


                                    <TextView
                                        android:id="@+id/editcodigo"
                                        android:layout_width="211sp"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_horizontal"
                                        android:text="Codigo"
                                        android:textColor="#2195f2"
                                        android:textSize="30sp" />
                                </LinearLayout>
                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="0sp"
                                android:layout_marginRight="0sp"
                                android:layout_marginTop="5sp"
                                android:orientation="horizontal"
                                android:paddingLeft="10sp"
                                android:paddingRight="10sp"
                                android:paddingTop="5sp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="fill_horizontal"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/txtarticulo"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Articulo:"
                                        android:textColor="#000000"
                                        android:textSize="20sp" />

                                    <TextView
                                        android:id="@+id/txtArticulo"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="10sp"
                                        android:text="Articulo"
                                        android:textColor="#2195f2"
                                        android:textSize="20sp" />
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="0sp"
                                android:layout_marginRight="0sp"
                                android:layout_marginTop="5sp"
                                android:orientation="horizontal"
                                android:paddingLeft="10sp"
                                android:paddingRight="10sp"
                                android:paddingTop="5sp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="fill_horizontal"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/txtdescripcion"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Descripcion:"
                                        android:textColor="#000000"
                                        android:textSize="20sp"
                                        android:typeface="sans" />

                                    <TextView
                                        android:id="@+id/Descripcion"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="10sp"
                                        android:text="Descripcion"
                                        android:textColor="#2195f2"
                                        android:textSize="20dp" />
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="0sp"
                                android:layout_marginRight="0sp"
                                android:layout_marginTop="5sp"
                                android:orientation="horizontal"
                                android:paddingLeft="10sp"
                                android:paddingRight="10sp"
                                android:paddingTop="5sp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="fill_horizontal"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/txtLote1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Lote:"
                                        android:textColor="#000000"
                                        android:textSize="20sp"
                                        android:typeface="sans" />

                                    <TextView
                                        android:id="@+id/txtLote2"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="10sp"
                                        android:text="Lote"
                                        android:textColor="#2195f2"
                                        android:textSize="20sp" />
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="0sp"
                                android:layout_marginRight="0sp"
                                android:layout_marginTop="5sp"
                                android:orientation="horizontal"
                                android:paddingLeft="10sp"
                                android:paddingRight="10sp"
                                android:paddingTop="5sp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="fill_horizontal"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/txtFechaVencimiento"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Fecha Vencimiento:"
                                        android:textColor="#000000"
                                        android:textSize="20sp"
                                        android:typeface="sans" />
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="0sp"
                                android:layout_marginRight="0sp"
                                android:layout_marginTop="5sp"
                                android:orientation="horizontal"
                                android:paddingLeft="10sp"
                                android:paddingRight="10sp"
                                android:paddingTop="5sp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="fill_horizontal"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/fechavencimiento"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Fecha vencimiento"
                                        android:textColor="#2195f2"
                                        android:textSize="20sp" />
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="0sp"
                                android:layout_marginRight="0sp"
                                android:layout_marginTop="5sp"
                                android:orientation="horizontal"
                                android:paddingLeft="10sp"
                                android:paddingRight="10sp"
                                android:paddingTop="5sp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="fill_horizontal"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/tomar"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Cantidad a Ubicar"
                                        android:textColor="#2195f2"
                                        android:textSize="20sp"
                                        android:typeface="sans" />

                                    <TextView
                                        android:id="@+id/cantidadUMt"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="10sp"
                                        android:text="Cant"
                                        android:textColor="#FF4500"
                                        android:textSize="25sp" />

                                    <TextView
                                        android:id="@+id/umt"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="20sp"
                                        android:text="UMT"
                                        android:textColor="#FF4500"
                                        android:textSize="25sp" />
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="0sp"
                                android:layout_marginRight="0sp"
                                android:layout_marginTop="5sp"
                                android:orientation="horizontal"
                                android:paddingLeft="10sp"
                                android:paddingRight="10sp"
                                android:paddingTop="5sp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="fill_horizontal"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/equi"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Equivalente a:"
                                        android:textColor="#2195f2"
                                        android:textSize="20sp"
                                        android:typeface="sans" />

                                    <TextView
                                        android:id="@+id/cantidadUMP"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="10sp"
                                        android:text="Cant"
                                        android:textColor="#FF4500"
                                        android:textSize="25dp" />

                                    <TextView
                                        android:id="@+id/ump"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="20sp"
                                        android:text="UMP"
                                        android:textColor="#FF4500"
                                        android:textSize="25sp" />
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="0sp"
                                android:layout_marginRight="0sp"
                                android:layout_marginTop="5sp"
                                android:orientation="horizontal"
                                android:paddingLeft="10sp"
                                android:paddingRight="10sp"
                                android:paddingTop="5sp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="fill_horizontal"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/txtubicacionD"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Ubicacion Destino:"
                                        android:textColor="#000000"
                                        android:textSize="20sp"
                                        android:typeface="sans" />

                                </LinearLayout>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="0sp"
                                android:layout_marginRight="0sp"
                                android:layout_marginTop="5sp"
                                android:orientation="horizontal"
                                android:paddingLeft="10sp"
                                android:paddingRight="10sp"
                                android:paddingTop="5sp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center_horizontal"
                                    android:orientation="vertical">


                                    <TextView
                                        android:id="@+id/UbicacionD"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Ubicacion"
                                        android:layout_gravity="center_horizontal"
                                        android:textColor="#2195f2"
                                        android:textSize="30sp" />
                                </LinearLayout>
                            </LinearLayout>




                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="0sp"
                                android:layout_marginRight="0sp"
                                android:layout_marginTop="5sp"
                                android:orientation="horizontal"
                                android:paddingLeft="10sp"
                                android:paddingRight="10sp"
                                android:paddingTop="5sp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="fill_horizontal"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/txttarea"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Tarea #: "
                                        android:textColor="#000000"
                                        android:textSize="20sp"
                                        android:typeface="sans" />

                                    <TextView
                                        android:id="@+id/Ntarea"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="10sp"
                                        android:text="Tarea"
                                        android:textColor="#2195f2"
                                        android:textSize="20sp" />
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="0sp"
                                android:layout_marginRight="0sp"
                                android:layout_marginTop="5sp"
                                android:orientation="horizontal"
                                android:paddingLeft="10sp"
                                android:paddingRight="10sp"
                                android:paddingTop="5sp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="fill_horizontal"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/txtseguridad"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Seguridad:"
                                        android:textColor="#000000"
                                        android:textSize="20sp" />

                                    <TextView
                                        android:id="@+id/Seguridad"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="10sp"
                                        android:text="Seguridad"
                                        android:textColor="#2195f2"
                                        android:textSize="20sp" />
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="0sp"
                                android:layout_marginRight="0sp"
                                android:layout_marginTop="5sp"
                                android:orientation="horizontal"
                                android:paddingLeft="10sp"
                                android:paddingRight="10sp"
                                android:paddingTop="5sp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="fill_horizontal"
                                    android:orientation="vertical">

                                    <EditText
                                        android:id="@+id/codigoSeguridad"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:ems="10"
                                        android:hint="Codigo de seguridad"
                                        android:inputType="none|textPersonName" />
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="0sp"
                                android:layout_marginRight="0sp"
                                android:layout_marginTop="5sp"
                                android:orientation="horizontal"
                                android:paddingLeft="10sp"
                                android:paddingRight="10sp"
                                android:paddingTop="5sp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:orientation="vertical">

                                    <Button
                                        android:id="@+id/Enviar"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_horizontal"
                                        android:text="Enviar"
                                        android:textColor="#2195f2"
                                        android:textSize="20sp"
                                        android:typeface="sans" />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
            </android.support.v7.widget.CardView>
        </RelativeLayout>
        </ScrollView>
    </LinearLayout>
</android.support.v4.widget.DrawerLayout>